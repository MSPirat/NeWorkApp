<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progress_bar_fragment_new_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_spacing_extra_large"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/edit_text_name_fragment_new_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_spacing_small"
            android:layout_marginTop="@dimen/common_spacing_large"
            android:layout_marginEnd="@dimen/common_spacing_small"
            android:focusable="false"
            android:hint="@string/text_job_name"
            android:importantForAutofill="no"
            android:inputType="text"
            android:padding="@dimen/common_spacing_medium"
            tools:ignore="MissingConstraints,TextFields" />

        <EditText
            android:id="@+id/edit_text_position_fragment_new_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_spacing_small"
            android:layout_marginTop="@dimen/common_spacing_large"
            android:layout_marginEnd="@dimen/common_spacing_small"
            android:focusable="false"
            android:hint="@string/text_job_position"
            android:importantForAutofill="no"
            android:inputType="text"
            android:padding="@dimen/common_spacing_medium"
            tools:ignore="MissingConstraints,TextFields" />

        <EditText
            android:id="@+id/edit_text_start_fragment_new_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_spacing_small"
            android:layout_marginTop="@dimen/common_spacing_large"
            android:layout_marginEnd="@dimen/common_spacing_small"
            android:focusable="false"
            android:hint="@string/text_job_start"
            android:importantForAutofill="no"
            android:inputType="text|date|number"
            android:padding="@dimen/common_spacing_medium"
            tools:ignore="MissingConstraints,TextFields" />

        <EditText
            android:id="@+id/edit_text_finish_fragment_new_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_spacing_small"
            android:layout_marginTop="@dimen/common_spacing_large"
            android:layout_marginEnd="@dimen/common_spacing_small"
            android:focusable="false"
            android:hint="@string/text_job_finish"
            android:importantForAutofill="no"
            android:inputType="text|date|number"
            android:padding="@dimen/common_spacing_medium"
            tools:ignore="MissingConstraints,TextFields" />

        <EditText
            android:id="@+id/edit_text_link_fragment_new_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_spacing_small"
            android:layout_marginTop="@dimen/common_spacing_large"
            android:layout_marginEnd="@dimen/common_spacing_small"
            android:focusable="false"
            android:hint="@string/text_job_link"
            android:importantForAutofill="no"
            android:inputType="text|textWebEditText"
            android:padding="@dimen/common_spacing_medium"
            tools:ignore="MissingConstraints,TextFields" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_save_fragment_new_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/common_spacing_large"
            android:text="@string/save"
            android:textAllCaps="false" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>